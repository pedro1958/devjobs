<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>Email</label>
            <input type="text" name="email" placeholder="Tu Email" required>
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña" required>
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crear una Cuenta</a>
            <a href="/reestablecer-password">Olvidé mi contraseña</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
        </div>
    </form>
</main>