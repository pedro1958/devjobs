<main class="contenedor">
    <form action="/editar-perfil" method="POST" enctype="multipart/form-data" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Tu Nombre" value="{{usuario.nombre}}">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" placeholder="Tu Email" value="{{usuario.email}}">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="="adm-perfil>
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>