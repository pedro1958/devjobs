<main class="lista-candidatos">
    <h2>Lista de Candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Email</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{cv}}" target="_blank" class="btn btn-verde">Ver Curriculum</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay candidatos, a√∫n.</p>
    {{/if}}
</main>